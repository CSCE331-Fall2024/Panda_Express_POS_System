{
  "compilerOptions": {
    "target": "ESNext", // Allows modern JavaScript features
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext", // Matches modern module systems
    "moduleResolution": "node", // Ensures compatibility with TypeDoc
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Ensures JSX compatibility for TypeDoc
    "incremental": true,
    "paths": {
      "@/*": [
        "./*"
      ] // Alias support
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
